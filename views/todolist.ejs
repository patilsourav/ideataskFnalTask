<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://cdn.tailwindcss.com"></script>
  <title>Todo List</title>
</head>
<body class="bg-[#1b1f3b] text-white">
  <header class="bg-[#0f4390] text-white p-4 flex justify-between items-center">
    <h1 class="text-3xl">Todo App</h1>
    <nav class="space-x-4">
      <a href="/" class="hover:underline">Home</a>
      <a href="/login" class="hover:underline">Login</a>
      <a href="/signup" class="hover:underline">Sign Up</a>
      <a href="/todolist" class="hover:underline">Todo List</a>
    </nav>
  </header>
  <div class="container mx-auto p-6">
    <h1 class="text-3xl mb-4">My Todo List</h1>
    <form action="/addTask" method="POST" class="flex">
      
      <input type="text" name="taskName" placeholder="Enter your task" required class="w-full p-2 rounded-md mr-2 text-black" />
      <button type="submit" class="bg-green-500 px-4 py-2 rounded-md">Add</button>
    </form>

    <ul class="mt-4">
      <% tasks.forEach(function(task) { %>
        <li class="flex justify-between items-center p-2 mb-2">
          <form action="/toggleTask" method="POST" class="flex items-center">
            <input type="hidden" name="taskId" value="<%= task._id %>">
            <input type="checkbox" <%= task.completed ? 'checked' : '' %> onchange="this.form.submit()">
            <span class="ml-2 <%= task.completed ? 'line-through' : '' %>"><%= task.name %></span>
          </form>
          <form action="/removeTask" method="POST">
            <input type="hidden" name="taskId" value="<%= task._id %>">
            <button class="bg-red-500 px-2 py-1 rounded-md">Remove</button>
          </form>
        </li>
      <% }) %>
    </ul>
  </div>
</body>
</html>
